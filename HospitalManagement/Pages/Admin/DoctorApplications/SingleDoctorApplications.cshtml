@page
@model HospitalManagement.Pages.Admin.DoctorApplications.SingleDoctorApplicationsModel
@{
    Layout = "/Pages/Admin/_AdminLayout.cshtml";
}
<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 9999;
        padding-top: 50px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.9);
    }

    .modal-content {
        margin: auto;
        display: block;
        max-width: 90%;
        max-height: 90%;
    }

    .zoom-image {
        cursor: pointer;
    }
</style>

<form method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">SingleDoctorApplications</h5>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> First Name</label>
                        <input class="form-control" asp-for="DoctorApplicationInnerJoin.FirstName"
                               aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> Last Name</label>
                        <input class="form-control" asp-for="DoctorApplicationInnerJoin.LastName"
                               aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> Gender</label>
                        <input class="form-control" asp-for="DoctorApplicationInnerJoin.Gender"
                               aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label>DateOfBirth</label>
                        <input class="form-control" asp-for="DoctorApplicationInnerJoin.DateOfBirth"
                               aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> Email</label>
                        <input class="form-control" asp-for="DoctorApplicationInnerJoin.Email"
                               aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">

                        <label> Department</label>
                        <input class="form-control" asp-for="DoctorApplicationInnerJoin.DepartmentName"
                               aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> Profile Photo</label>
                        <img src="@Url.Content("~/" + Model.DoctorApplicationInnerJoin.ProfilePhotoPath)" class="zoom-image"
                             onclick="openModal(this.src)" width="470" height="500" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> Resume Photo</label>
                        <img src="@Url.Content("~/" + Model.DoctorApplicationInnerJoin.ResumePath)" class="zoom-image"
                             onclick="openModal(this.src)" width="470" height="500" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> RequestDate</label>
                        <input class="form-control" asp-for="DoctorApplicationInnerJoin.RequestDate"
                               aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> Application Status</label>
                        <input class="form-control" asp-for="DoctorApplicationInnerJoin.ApplicationStatus"
                               aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>

            </div>
        </div>

        <div class="my-3" style="
    text-align: center;
">
            <button class="btn btn-primary" type="submit" asp-page-handler="Approve">Approve</button>
            <button class="btn btn-danger ms-3" type="submit" asp-page-handler="Reject">Reject</button>
        </div>
    </div>
</form>
<form method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Approve Details</h5>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label>JoiningDate</label>
                        <input class="form-control" asp-for="DoctorApproveViewModel.JoiningDate"type="date"min="@DateTime.Today.ToString("yyyy-MM-dd")"  >
                        <span asp-validation-for="DoctorApproveViewModel.JoiningDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex flex-column gap-2 mb-3">


                        <label> SalaryAmount</label>
                        <input class="form-control" asp-for="DoctorApproveViewModel.SalaryAmount">
                        <span asp-validation-for="DoctorApproveViewModel.SalaryAmount" class="text-danger"></span>
                    </div>
                </div>
               
              
               
             
              
             
                
              

            </div>
        </div>

        <div class="my-3" style="
    text-align: center;
">
            <button class="btn btn-primary" type="submit" asp-page-handler="FinalApprove">Approve</button>
           
        </div>
    </div>
</form>

<div id="imageModal" class="modal" onclick="closeModal()">
    <img id="modalImage" class="modal-content" />
</div>

<script>
    function openModal(src) {
        document.getElementById("imageModal").style.display = "block";
        document.getElementById("modalImage").src = src;
    }

    function closeModal() {
        document.getElementById("imageModal").style.display = "none";
    }
</script>

