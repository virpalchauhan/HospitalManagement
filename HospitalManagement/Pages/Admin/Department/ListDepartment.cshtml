@page
@model HospitalManagement.Pages.Admin.Department.ListDepartmentModel
@{

    Layout = "/Pages/Admin/_AdminLayout.cshtml";
    int count = 1;

}

<div class="card">
    <div class="card-header">
        <h2>
            List Department
        </h2>

    </div>

    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-hover table-centered">
                <thead class="table-light">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">DepartmentName</th>
                        <th scope="col">Description</th>
                        <th scope="col">IsActive</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                        <th scope="col">CreationDate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DepartmentTblList)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-1">

                                    <div class="d-block">
                                        <h5 class="mb-0">@count</h5>
                                    </div>
                                </div>
                            </td>
                            <td>@item.DepartmentName</td>


                            <td>
                                <textarea class="form-control" id="example-textarea">@item.Description</textarea>
                            </td>

                            <td>@(item.IsActive==1 ? "Active" : "Deactive")</td>
                            <td><a asp-page="/Admin/Department/AddDepartment"  asp-route-id="@item.DepartmentId" class="btn btn-success btn-sm w-100">Edit</a></td>

                            <td>
                                <form method="post" asp-page-handler="Delete">
                                    <input type="hidden" name="DepartmentId" value="@item.DepartmentId" />
                                    <button type="submit"
                                            class="btn btn-danger btn-sm w-100"
                                            onclick="return confirm('Are you sure you want to delete this department?')">
                                        Delete
                                    </button>
                                </form>
                            </td>

                            <td>@item.CreationDate</td>
                        </tr>
                        count++;
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
@if (TempData["Msg"] != null)
{
    <script>
        alert("@TempData["Msg"]");
         
    </script>
}