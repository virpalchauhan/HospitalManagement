<style>
    select.form-control {
        background: transparent;
        border: none;
        border-bottom: 1px solid #ccc;
        border-radius: 0;
        color: #fff;
        box-shadow: none;
    }

        select.form-control:focus {
            outline: none;
            box-shadow: none;
            border-bottom: 1px solid #fff;
        }

        select.form-control option {
            color: #000; /* dropdown ke andar text black rahe */
        }

    select.form-control {
        appearance: auto;
        -webkit-appearance: auto;
        -moz-appearance: auto;
    }


    .custom-date {
        background: transparent;
        border: none;
        border-bottom: 1px solid #ccc;
        border-radius: 0;
        color: #fff;
    }

        .custom-date:focus {
            outline: none;
            box-shadow: none;
            border-bottom: 1px solid #fff;
        }

        /* Calendar icon white karne ke liye (Chrome based browsers) */
        .custom-date::-webkit-calendar-picker-indicator {
            filter: invert(1);
            cursor: pointer;
        }

    .custom-file {
        background: transparent;
        border: none;
        border-bottom: 1px solid #ccc;
        border-radius: 0;
        color: #fff;
    }

        .custom-file:focus {
            outline: none;
            box-shadow: none;
            border-bottom: 1px solid #fff;
        }
</style>
